/**app.wxss**/
@import "/wxParse/wxParse.wxss";
page {
  height: 100%;
  font: normal 30rpx/1.68 'Microsoft YaHei',-apple-system-font, 'Helvetica Neue', Helvetica,  sans-serif;
}
.container {
  height: 100%;
  box-sizing: border-box;
} 
/*实现滚动加载加载：必须设置scroll-view的高度，如果是是100%，父级以上的高度也必须是确定的*/
scroll-view {
    height: 100%;  
}
.banner {
    width: 100%;
    height: 300rpx;
    margin-bottom: 10rpx
}
.banner image {
    width: 100%;
    height: 100%;
}
.bd {
    border-bottom: 2rpx solid #e5e5e5;
}
.mrr25{
    margin-right: 25rpx;
}

.comments_tips {
  height: 96rpx;
  line-height: 96rpx;
  padding-left: 20rpx;
  color: #373737;
  border-top: 1rpx solid #d4d3d7;
}
.comments_item {
  display: flex;
  padding: 16rpx 26rpx;
  border-top: 1rpx solid #d4d3d7;
}
.comments_pt {
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  border-radius: 40rpx;
}
.comments_pt image {
  width: 100%;
  height: 100%;
  background-color: #efefef;
  
}
.comments_wd {
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
}
.comments_top {
  overflow: hidden;
}
.comments_lt {
  float: left;
}
.comments_praise {
  float: right;
  height: 40rpx;
  color: #a3a3a3;
  font-size:24rpx;
}
.comments_name{
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.comments_text{
  color: #666;
}