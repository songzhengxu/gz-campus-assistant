/* pages/life/job/edit/edit.wxss */
.container {
    position: relative;
    background: #efeff4;
}
.err_msg {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
    width: 100%;
    height: 70rpx;
    background: #e64340;
    color: #fff;
    text-align: center;
    line-height: 70rpx;
}
.page_prev {
    width: 100%;
    height: 100%;
}
.page_next {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    transform: translateX(100%);
    background: #efeff4;
}

.section_group{
    background: #fff;
}
.section_instr {
    height: 70rpx;
    line-height: 70rpx;
    padding-left: 32rpx;
    padding-top: 16rpx;
    font-size: 28rpx;
    color: #888;
    background: #efeff4;
}
.section {
    display:flex;
    margin-left: 30rpx;
    font-size: 34rpx;
    color: #000;
}

.section label{
    width: 26%;
    line-height: 86rpx;
}

.section_content {
    width: 74%;
    padding-right: 20rpx;
    box-sizing: border-box;
}
.section_input {
    height: 86rpx;
}
.section_input input {
    display: block;
    height: 100%;
}
.section_area {
    line-height: 86rpx;
    background: url(https://wx.fanweimei.com/json/img/arrow_right.png) no-repeat 95% center;
    background-size: 32rpx;
}
.section_date {
    line-height: 86rpx;
    overflow: hidden;
}
.date, .date_connector {
    float: left;
}
.date_connector {
    margin: 0 34rpx;
}
.section_btn {
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-bottom: 60rpx;
}
.next_btn {
    margin-top: 60rpx;
}
.section_text {
    height: 200rpx;
    padding: 20rpx 0;
}
.section_text textarea {
    width: 100%;
    height: 100%;
}
.section_agreement {
    height: 114rpx;
    line-height: 114rpx;
    margin-left: 30rpx;
    font-size: 26rpx;
    color: #9b9b9b;
}
.section_agreement checkbox {
    position: relative;
    top: -4rpx;
    zoom: 60%;
    
}
.section_agreement navigator {
   display: inline;
   color: #6a7fa6;
}

