.container {
    padding: 0 24rpx;
}
.nav {
    display: flex;
    align-items: center;
    width: 100%;
    height: 176rpx;
    margin-top: 24rpx;
    padding-left: 50rpx;
    padding-right: 40rpx;
    box-sizing: border-box;
    border-radius: 12rpx;
    color: #fff;
}
.job {
    background: lightseagreen;
}
.second {
    background: #fd5064;
}
.lost {
    background: gray;
}
.nav image {
    width: 100rpx;
}
.nav text {
    display: block;
}
.nav view {
    width: 100%;
    padding-left: 50rpx;
    box-sizing: border-box;
    background: url(../../img/right-arrow.png) no-repeat right center;
    background-size: 40rpx;
}
.title {
    font-size: 40rpx;
}
.descriptor {
    font-size: 30rpx;
    color: #eee;
}