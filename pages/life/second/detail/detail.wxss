.g-shop{
    background: #efefef;
}
.shop_detail{
    padding: 24rpx;
    padding-bottom: 0;
    background: #fff;
    margin-bottom:24rpx; 
}
.m-xztx{
    height: 80rpx;
    margin-bottom: 24rpx;
}
.m-xztx image{
    width: 80rpx;
    height: 80rpx;
    float: left;
    border-radius: 40rpx;
    overflow: hidden;
    margin-right: 24rpx;
    background-color: #efefef;
}
.m-xztx .tit{
    font-size: 30rpx;
    color: #333;
    line-height: 46rpx;
}
.m-xztx .tit .price{
    color: #ff0000;
    float: right;
}
.m-xztx .num{
    font-size: 26rpx;
    color: #999;
    line-height: 32rpx;
}
.mrr25 {
    display: inline-block;
    padding-left: 36rpx;
    background: url(https://wx.fanweimei.com/json/img/icon-time.png) no-repeat left 40%;
    background-size: 32rpx;
}
.m-xztx .tit .price{
    font-size: 20rpx;
    color: #999;
    float: right;
    text-decoration:line-through;
}
.m-xztx .new_price{
    font-size: 30rpx;
    color: #ff0000;
    float: right; 
}
.shop_text{
    margin-bottom: 24rpx;
}
.shop_img image{
    width: 100%;
    min-height:300rpx;
    background: #efefef;
    margin-bottom: 5rpx;
}
.shop_info {
    padding-bottom: 12rpx;
}
.shop_info .icon{
    color: #53addf;
    margin-right: 20rpx;
    font-size: 24rpx;
    border: 1px solid #53addf;
    padding: 1px;
}
.shop_info .num{
    float: right;
    font-size: 26rpx;
    color: #999;
}
.shop_addr {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70rpx;
    font-size: 26rpx;
    color: #333;
}
.shop_addr_icon {
    width: 80rpx;
    text-align: right;
}
.shop_addr_icon image {
    width: 52rpx;
}
.comments{
    background: #fff;
    margin-bottom: 110rpx;
}
.shop_caozuo{
    height: 90rpx;
    width: 100%;
    background: #fff;
    border: 1px solid #efefef;
    position: fixed;
    left: 0;
    bottom: 0;
}
.shop_goumai{
    float: right;
    background: #3399ff;
    width: 245rpx;
    height: 90rpx;
    line-height: 90rpx;
    color: #fff;
     text-align: center;
}
.shop_caozuo .icon{
    width: 160rpx; 
    float: left;
    text-align: center;
    padding-top: 4rpx;
    font-size: 24rpx;
}
.shop_caozuo .icon image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin:0 auto; 
}
.zhuren{
    color:#53addf;
    margin:0 10rpx;
    font-size:24rpx;
    border:1px solid #53addf;
    padding:1rpx;
    height: 18rpx;
    line-height: 18rpx;
}